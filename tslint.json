{
  "extends": [
    "tslint:recommended",
    "tslint-config-standard",
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "rules": {
    "import-name": false,
    "max-line-length": [
      true,
      120
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "align": [
      true,
      "statements"
    ]
  },
  "jsRules": {
    "no-empty": true
  }
}
